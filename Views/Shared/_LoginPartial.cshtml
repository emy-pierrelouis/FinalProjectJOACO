@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{

    <li class="nav-item ms-lg-n4">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <button type="submit" class="nav-link btn btn-link text-dark">Account</button>
        </form>
    </li>

    <li class="nav-item ms-lg-n4">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item ms-lg-n4">
        <form class="form-inline" asp-area="Identity" asp-area="Identity" asp-page="/Account/Register">
            <button type="submit" class="nav-link btn btn-link text-dark">Register</button>
        </form>
    </li>

    <li class="nav-item ms-lg-n4">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Login">
            <button type="submit" class="nav-link btn btn-link text-dark">Login</button>
        </form>
    </li>
}
