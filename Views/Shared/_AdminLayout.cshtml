<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JOACO Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/assets/css/libs.bundle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/assets/css/theme.bundle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/image-uploader.min.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-xl navbar-light ">
            <div class="container">


                <a class="navbar-brand d-xl-none" asp-area="" asp-controller="Home" asp-action="Index">JOACO, Move with Confidence</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarClassicCollapse" aria-controls="navbarClassicCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarClassicCollapse">

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Dashboard</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-area="" asp-controller="Commandes" asp-action="Index">Commandes</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Produits" asp-action="Index">Produits</a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-area="" asp-controller="Email" asp-action="Index">Courriel</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Blog" asp-action="Index">Blog</a>
                        </li>


                    </ul>

                    <a class="navbar-brand mx-auto d-none d-xl-block" href="">
                        JOACO Dashboard.
                    </a>

                    <ul class="navbar-nav nav-divided">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Back to Client View</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav flex-row">
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/assets/assets/js/vendor.bundle.js"></script>
    <script src="~/assets/assets/js/theme.bundle.js"></script>

    <script src="node_modules/@@glidejs/glide/dist/glide.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>